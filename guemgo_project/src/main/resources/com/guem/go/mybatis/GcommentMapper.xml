<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guem.go.mybatis.GcommentMapper">
	<insert id="insert" parameterType="com.guem.go.kidong.GcommentVo">
		insert into gcomment values(gcomment_seq.nextval,#{content},#{bnum},sysdate,#{email})
	</insert>
	<select id="list" parameterType="int" resultType="com.guem.go.kidong.GcommentVo">
		select * from gcomment where bnum = #{num} order by cnum
	</select>
	<select id="getCount" parameterType="int" resultType="int">
		select NVL(count(cnum),0) cnt from gcomment where bnum = #{num}
	</select>
	<delete id="delete" parameterType="int">
		delete from gcomment where cnum = #{cnum}
	</delete>
</mapper>  