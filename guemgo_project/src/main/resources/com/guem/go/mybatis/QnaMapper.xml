<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guem.go.mybatis.QnaMapper">
	<select id="getMaxNum" resultType="int">
		select NVL(max(num),0) maxnum from qna_BOARD
	</select>
	<select id="getCount" resultType="int">
		select NVL(count(num),0) cnt from qna_BOARD
	</select>
	<insert id="insert" parameterType="com.guem.go.kidong.QboardVo">
		insert into qna_BOARD values(#{num},#{title},#{content},sysdate,#{email},#{grp},#{lev},#{step},0)
	</insert>
	<update id="insertReply" parameterType="map">
		<![CDATA[update qna_BOARD set step=step+1 where grp=#{grp} and step>#{step}]]>
	</update>
	<select id="list" parameterType="map" resultType="com.guem.go.kidong.QboardVo">
		select * from
		(
			select aa.*,rownum rnum from
			(
				select * from qna_BOARD
				ORDER BY grp DESC,STEP ASC
			)aa
		)
		<![CDATA[ where rnum>=#{startRow} and rnum<=#{endRow} ]]>
	</select>
	<select id="detail" parameterType="int" resultType="com.guem.go.kidong.QboardVo">
		select * from qna_BOARD where num=#{num}
	</select>
	<update id="update" parameterType="com.guem.go.kidong.QboardVo">
		update qna_BOARD set title=#{title}, content=#{content}
		where num=#{num}
	</update>
	<update id="addHit" parameterType="int">
		update qna_board set hit = hit + 1 where num = #{num}
	</update>
	<delete id="delete" parameterType="int">
		delete from qna_board where num = #{num}
	</delete>
	<delete id="deleteGrp" parameterType="int">
		delete from qna_board where grp = #{grp}
	</delete>
</mapper>
