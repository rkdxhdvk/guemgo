<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guem.go.mybatis.Sche_detailMapper">
	<select id="insert" parameterType="com.guem.go.minsu.ScheduleVo">
		insert into sche_detail values(schedetail_seq.nextval, #{scheduleNum}, #{memo}, #{sDate}, #{eDate}, 0, #{lecturename})
	</select>
	<select id="detailNum" resultType="int">
		select schedetail_seq.nextval from dual
		<!-- select max(schedetailnum) from sche_detail -->
	</select>
	<select id="sche_detail" parameterType="int" resultType="com.guem.go.minsu.ScheduleVo">
		select * from sche_detail where schedetailNum=#{schedetailNum}
	</select>
	<select id="detailUpdate" parameterType="com.guem.go.minsu.ScheduleVo">
		update sche_detail set memo=#{memo}, sDate=#{sDate}, eDate=#{eDate}, attendance=#{attendance} 
		where schedetailNum=#{schedetailNum}
	</select>
	<select id="sche_detailList" parameterType="int" resultType="com.guem.go.minsu.ScheduleVo">
		select * from sche_detail where scheduleNum=#{scheduleNum}
	</select>
	<select id="all_detailDelete" parameterType="int">
		delete from sche_detail where scheduleNum=#{scheduleNum}
	</select>
	<select id="sche_detailDelete" parameterType="int">
		delete from sche_detail where schedetailNum=#{schedetailNum}
	</select>
</mapper>






